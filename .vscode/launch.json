{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run encrypt_decrypt",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/encrypt_decrypt.exe",
            "args": ["input.txt", "encryption_key"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Compilers/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
